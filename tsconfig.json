{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "target": "es6",
    "module": "node16",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node16"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts"],
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "nodenext"
    }
  }
}
